{
	"$schema": "https://vega.github.io/schema/vega-lite/v5.json",
	"description": "A bar chart with negative values. We can hide the axis domain line, and instead use a conditional grid color to draw a zero baseline.",
	"width": 800,
	"height": 600,
	"data": {
		"url": "https://raw.githubusercontent.com/CyuuGit/FIT3179Wk10/master/data/table1.csv"
	},
	"params": [
		{
			"name": "Fire_area_at_least",
			"value": 0,
			"bind": {
				"input": "range",
				"min": 0,
				"max": 5000,
				"step": 100,
				"name": "Fire area ('000 hectares) at least: "
			}
		}

	],

	"encoding": {
		"x": {
			"field": "Jurisdiction",
			"type": "nominal"
		},
		"y": {
			"field": "Fire_area",
			"title": "Fire area ('000 hectares)",
			"type": "quantitative",
			"axis": {
				"gridColor": {
					"condition": { "test": "datum.value === 0", "value": "black" },
					"value": "#ddd"
				}
			}
		}
		
	},
	"layer": [
		{
			"mark": "bar",

			"encoding": {
				"x": {
					"field": "Jurisdiction",
					"type": "nominal"
				},
				"y": {
                    "field": "Fire_area",
                    "title": "Fire area (000 hectares)",
                    "type": "quantitative",
                    "axis": {
                        "gridColor": {
                            "condition": { "test": "datum.value === 0", "value": "black" },
                            "value": "#ddd"
                        }
                    }
                },

				"tooltip": [
					{
						"field": "Jurisdiction",
						"type": "nominal",
						"title": "Jurisdiction"
					},
					{
						"field": "Fire_area",
						"type": "quantitative",
						"title": "Fire area (000 hectares)",
						"format": ".2f"
					},
					{
						"field": "Forest_area_in_fire_area",
						"type": "quantitative",
						"title": "Forest area in fire area",
						"format": ".2f"
					},
                    {
						"field": "Proportion_of_fire_area_that_is_forested",
						"type": "quantitative",
						"title": "Proportion of fire area that is forested",
						"format": ".2f"
					}
				]
			}
		}
	]
}