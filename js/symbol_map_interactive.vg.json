{
	"$schema": "https://vega.github.io/schema/vega-lite/v5.json",
	"description": "A bar chart with negative values. We can hide the axis domain line, and instead use a conditional grid color to draw a zero baseline.",
	"width": 800,
	"height": 600,
	"data": {
		"url": "../data/table1.csv"
	},
	"params": [
		{
			"name": "Fire_area_at_least",
			"value": 0,
			"bind": {
				"input": "range",
				"min": 0,
				"max": 5000,
				"step": 100,
				"name": "Fire area (000 hectares) at least: "
			}
		}

	],
	"encoding": {
		"x": {
			"field": "state",
			"type": "nominal"
		},
		"y": {
			"field": "fire",
			"title": "Fire area (000 hectares)",
			"type": "quantitative"
		}
	},
	

	"transform": [{"filter": "Fire_area_at_least < datum['fire']" }],

	"layer": [
		{
			"mark": "bar",

			"encoding": {
				"x": {
					"field": "state",
					"type": "nominal"
				},
				"y": {
                    "field": "fire",
                    "title": "Fire area (000 hectares)",
                    "type": "quantitative"
                },

				"tooltip": [
					{
						"field": "state",
						"type": "nominal",
						"title": "State"
					},
					{
						"field": "fire",
						"type": "quantitative",
						"title": "Fire area (000 hectares)",
						"format": ".2f"
					},
					{
						"field": "forest",
						"type": "quantitative",
						"title": "Forest area in fire area",
						"format": ".2f"
					},
                    {
						"field": "proportion",
						"type": "quantitative",
						"title": "Proportion of fire area that is forested",
						"format": ".2f"
					}
				]
			}
		}
	]
}